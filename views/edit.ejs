<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="HELLO!">
        </div>

        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image">
        </div>

        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required></textarea>
        </div>

        <input class="ui violet big basic button" type="submit">
    </form>
</div>

<% include ./partials/footer %>